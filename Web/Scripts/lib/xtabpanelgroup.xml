    <name>h</name>
    <note><![CDATA[overall height]]></note>
  </par>
  <par>
    <name>th</name>
    <note><![CDATA[tab height]]></note>
  </par>
  <par>
    <name>clsTP</name>
    <note><![CDATA[tabPanel css class]]></note>
  </par>
  <par>
    <name>clsTG</name>
    <note><![CDATA[tabGroup css class]]></note>
  </par>
  <par>
    <name>clsTD</name>
    <note><![CDATA[tabDefault css class]]></note>
  </par>
  <par>
    <name>clsTS</name>
    <note><![CDATA[tabSelected css class]]></note>
  </par>
</parameters>

